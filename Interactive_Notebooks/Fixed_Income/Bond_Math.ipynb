    "pull_market_yield_widget = FloatSlider(value=4, min=0.01, max=20, step=0.01, description='Market Yield (%):', readout_format='.2f', layout={'width': '500px'})\n",
    "pull_frequency_widget = widgets.Dropdown(options=[('Annual', 1), ('Semi-Annual', 2)], value=2, description='Coupon Freq:', layout={'width': 'auto'})\n",
    "\n",
    "pull_ui = VBox([\n",
    "    pull_par_value_widget,\n",
    "    pull_coupon_rate_widget,\n",
    "    pull_initial_years_widget,\n",
    "    pull_market_yield_widget,\n",
    "    pull_frequency_widget\n",
    "])\n",
    "\n",
    "pull_out = widgets.interactive_output(plot_pull_to_par, {\n",
    "    'par_value': pull_par_value_widget,\n",
    "    'annual_coupon_rate': pull_coupon_rate_widget,\n",
    "    'initial_years_to_maturity': pull_initial_years_widget,\n",
    "    'annual_market_yield': pull_market_yield_widget,\n",
    "    'coupon_frequency': pull_frequency_widget\n",
    "})\n",
    "\n",
