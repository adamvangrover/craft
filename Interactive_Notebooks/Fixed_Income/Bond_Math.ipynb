    "    cash_flows_data = \"\"\n",
    "    cash_flows_data += \"**Bond Cash Flow Schedule:**\\n\\n\"\n",
    "    cash_flows_data += f\"Par Value: ${par_value:,.2f}\\n\"\n",
    "    cash_flows_data += f\"Annual Coupon Rate: {annual_coupon_rate:.2f}%\\n\"\n",
    "    cash_flows_data += f\"Years to Maturity: {years_to_maturity}\\n\"\n",
    "    cash_flows_data += f\"Coupon Frequency: {'Annual' if coupon_frequency == 1 else 'Semi-Annual'}\\n\"\n",
    "    cash_flows_data += f\"Calculated Coupon Payment: ${coupon_payment:,.2f} per period\\n\\n\"\n",
    "    \n",
    "    cash_flows_data += \"| Period | Time (Years) | Cash Flow ($) | Type        |\\n\"\n",
    "    cash_flows_data += \"|--------|--------------|---------------|-------------|\\n\"\n",
    "    \n",
    "    for i in range(1, num_coupons + 1):\n",
    "        time_period = i / coupon_frequency\n",
    "        cf = coupon_payment\n",
    "        cf_type = \"Coupon\"\n",
    "        if i == num_coupons:\n",
    "            cf += par_value\n",
    "            cf_type = \"Coupon + Par\"\n",
    "        cash_flows_data += f\"| {i:<6} | {time_period:<12.2f} | {cf:<13,.2f} | {cf_type:<11} |\\n\"\n",
    "        \n",
    "    display(Markdown(cash_flows_data))\n",
