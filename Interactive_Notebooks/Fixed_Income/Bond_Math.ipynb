    "    \n",
    "    # Actual new price after yield change\n",
    "    actual_new_price = calculate_bond_price(par_value, annual_coupon_rate, years_to_maturity, new_ytm, coupon_frequency)\n",
    "    actual_price_change_pct = ((actual_new_price - current_price) / current_price) * 100 if current_price else 0\n",
    "    \n",
    "    # Approximated price change using Modified Duration\n",
    "    approx_price_change_pct = float('nan')\n",
    "    approximated_new_price = float('nan')\n",
    "    if not np.isnan(mod_d):\n",
    "        approx_price_change_pct = -mod_d * yield_change_decimal * 100 # in percentage\n",
    "        approximated_new_price = current_price * (1 + (approx_price_change_pct / 100))\n",
    "    \n",
    "    output_str = f\"\"\"\n",
    "    <h3>Bond Characteristics & Durations:</h3>\n",
    "    <p><b>Initial Calculated Price (at {annual_ytm:.2f}% YTM):</b> ${current_price:,.2f}</p>\n",
    "    <p><b>Macaulay Duration:</b> {mac_d:.4f} years</p>\n",
    "    <p><b>Modified Duration:</b> {mod_d:.4f}</p>\n",
    "    <p><b>Dollar Duration (DV01):</b> ${dv01:.4f} (for a 1 bp change)</p>\n",
    "    \n",
    "    <h3>Price Impact of Yield Change ({yield_change_bps:+.0f} bps):</h3>\n",
    "    <p><b>New YTM:</b> {new_ytm:.2f}%</p>\n",
    "    <p><b>Actual New Price:</b> ${actual_new_price:,.2f} (Actual Change: {actual_price_change_pct:+.4f}%)</p>\n",
    "    <p><b>Duration-Approximated New Price:</b> ${approximated_new_price:,.2f} (Approx. Change: {approx_price_change_pct:+.4f}%)</p>\n",
    "    <p style='font-size:0.9em; color:gray;'><i>Note: Duration provides a linear approximation. For larger yield changes, convexity (Section 5) becomes important for accuracy.</i></p>\n",
    "    \"\"\"\n",
    "    duration_output_html.value = output_str\n",
    "\n",
    "duration_out_interactive = widgets.interactive_output(interactive_duration_calculator, {\n",
    "    'par_value': dur_par_widget,\n",
